<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <table>
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Last Name</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Created date</th>
      <th>Updated date</th>
      <th>Show</th>
    </tr>
    </thead>

    <% @users.each do |user| %>
      <div id="<%= dom_id user %>">
        <tbody>
        <tr>
          <td> <%= user.id %></td>
          <td> <%= user.name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.gender %></td>
          <td> <%= user.age %></td>
          <td> <%= user.created_date %></td>
          <td> <%= user.updated_date %></td>
          <td>
            <%= link_to "Show this user", user %>
          </td>
        </tr>
        </tbody>
      </div>

    <% end %>

  </table>
</div>

<%= link_to "New user", new_user_path %>
